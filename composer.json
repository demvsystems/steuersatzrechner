{
    "name": "demvsystems/steuersatzrechner",
    "description": "Vereinfachter Rechner zum ermitteln des Steuersatzes auf Basis des Einkommens",
    "type": "library",
    "homepage": "https://github.com/demvsystems/werte",
    "authors": [
        {
            "name": "DEMV-Systems",
            "email": "developer@demv.de",
            "homepage": "https://github.com/demvsystems"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Demv\\Steuersatzrechner\\": "src",
            "Demv\\Steuersatzrechner\\Tests\\": "tests"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "coverage": [
            "phpunit --coverage-clover=coverage"
        ]
    }
}
